<h1>Flats#index</h1>
<p>Find me in app/views/flats/index.html.erb</p>

<% @flats.each do |flat| %>
  <%= link_to flat_path(flat['id']) do %>
    <div class="card-trip mt-5">
      <%= image_tag flat['imageUrl'] %>
      <div class="card-trip-infos">
        <div>
          <h2><%= flat['name'] %></h2>
        </div>
        <h2 class="card-trip-pricing"><%= flat['price'] %>- <%= flat['priceCurrency'] %></h2>
      </div>
    </div>
  <% end %>

  <%= link_to flat['name'], flat_path(flat['id']) %>
<% end %>
